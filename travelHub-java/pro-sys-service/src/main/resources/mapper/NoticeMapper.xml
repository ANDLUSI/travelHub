<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjetc.dao.NoticeMapper">
    <resultMap id="baseMap" type="notice">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="content" column="content"></result>
        <result column="create_time" property="createTime"></result>
        <result column="update_time" property="updateTime"></result>
    </resultMap>
    <select id="selectPage" resultMap="baseMap">
        select * from notice where target = 1
    </select>
    <select id="selectPage1" resultMap="baseMap">
        SELECT n.*
        FROM message_read mr
             JOIN notice n ON mr.notice_id = n.id
        WHERE mr.user_id = #{userId}
        ORDER BY n.update_time DESC
    </select>

</mapper>

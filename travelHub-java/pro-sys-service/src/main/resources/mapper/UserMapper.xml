<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjetc.dao.UserMapper">
    <resultMap id="baseMap" type="user">
        <id property="id" column="id"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="image_path" property="imagePath"></result>
        <result column="update_time" property="updateTime"></result>
        <result column="create_time" property="createTime"></result>
        <result column="lastlog_time" property="lastlogTime"></result>
        <result column="location" property="location"></result>
        <result column="title" property="title"></result>
        <result column="status" property="status"></result>
        <result column="phone" property="phone"></result>
        <result column="email" property="email"></result>
    </resultMap>
    <select id="selectPage" resultMap="baseMap">
        select *
        from t_user
    </select>
    <select id="selectPageLikeUsername" resultMap="baseMap">
        select *
        from t_user
        where username like concat('%',#{username},'%')
    </select>
    <select id="selectByUsername" resultMap="baseMap">
        select  *
        from t_user
        where username = #{username}
    </select>
    <select id="selectPageLikeUsernameAndStatus" resultMap="baseMap">
        select  *
        from t_user
        where username like concat('%',#{username},'%') and status = #{status}
    </select>
    <select id="selectLogin" resultMap="baseMap">
        select *
        from t_user
        where username = #{username} and password = #{password}
    </select>
    <select id="getAllUserIds" resultType="java.lang.Long">
        SELECT id FROM t_user
    </select>
    <select id="listMaps" resultMap="baseMap">
        SELECT *
        FROM t_user
    </select>
</mapper>
